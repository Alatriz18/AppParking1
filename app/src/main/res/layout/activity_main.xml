<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/color_botones1"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo_degrado"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="185dp"
            android:layout_height="209dp"
            android:layout_gravity="center"
            android:padding="4dp"
            app:srcCompat="@drawable/imglogo" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="   Usuario"
            android:textColor="#1B1A1A"
            android:textColorHint="#FFFFFF"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/loginEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:hint="   Ingrese su correo"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:gravity="center"
            android:text="   Contraseña"
            android:textColor="#121111"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/loginClave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:hint="   Ingrese su clave"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="41dp" />

        <Button
            android:id="@+id/loginIniciar"
            android:layout_width="232dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:background="@drawable/color_botones1"
            android:text="iniciar sesión"
            android:textColor="#3A3636"
            android:textSize="14sp"
            android:textStyle="italic"
            app:backgroundTintMode="screen" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="9dp" />

        <Button
            android:id="@+id/loginRegistrar"
            android:layout_width="234dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:background="@drawable/color_botones1"
            android:onClick="abrirPantallaRegistro"
            android:text="registrarse"
            android:textColor="#3A3636"
            android:textSize="14sp"
            android:textStyle="italic"
            app:backgroundTintMode="screen" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="9dp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:background="@drawable/color_botones1"
            android:text="¿Olvidó su contraseña?"
            android:textColor="#3A3636"
            android:textSize="14sp"
            android:textStyle="italic"
            app:backgroundTintMode="screen" />

    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>