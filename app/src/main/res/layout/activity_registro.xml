<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_registro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo_degrado"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:gravity="center"
            android:paddingTop="4dp"
            android:text="REGISTRO DE USUARIOS"
            android:textColor="#1E1C1C"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:hint="Apellidos"
            android:paddingLeft="11dp"
            android:textColorHint="#3C3B3B"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:hint="Nombres"
            android:paddingLeft="11dp"
            android:textColorHint="#3C3B3B"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/editTextTextEmailAddress2"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_gravity="center"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="correo: example@gamil.com"
            android:inputType="textEmailAddress"
            android:paddingLeft="11dp"
            android:textColorHint="#3C3B3B"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/editTextTextPassword2"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_gravity="center"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="Ingrese clave"
            android:inputType="textPassword"
            android:paddingLeft="8dp"
            android:textColorHint="#3C3B3B"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/editTextTextPassword3"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_gravity="center"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="confirme su clave"
            android:inputType="textPassword"
            android:paddingLeft="11dp"
            android:textColorHint="#3C3B3B"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_gravity="center"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="Némero de telefono o celular"
            android:inputType="phone"
            android:paddingLeft="11dp"
            android:textColorHint="#3C3B3B"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:hint="Dirección"
            android:paddingLeft="11dp"
            android:textColorHint="#3C3B3B"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/button2"
            android:layout_width="339dp"
            android:layout_height="62dp"
            android:layout_gravity="center"
            android:background="@drawable/borde_botones1"
            android:text="crear cuenta"
            android:textSize="18sp"
            app:backgroundTint="@color/teal_700" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/button3"
            android:layout_width="343dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/borde_botones1"
            android:text="cancelar"
            android:textSize="18sp"
            app:backgroundTint="@android:color/holo_red_light" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>