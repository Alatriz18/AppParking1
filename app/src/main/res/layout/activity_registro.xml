<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_registro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo_degrado"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:gravity="center"
            android:paddingTop="4dp"
            android:text="REGISTRO DE USUARIOS"
            android:textColor="#1E1C1C"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtApellidos"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:ems="10"
            android:hint="Apellidos"
            android:inputType="textPersonName"
            android:paddingLeft="11dp"
            android:textColorHint="#3C3B3B"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/txtNombres"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:ems="10"
            android:hint="Nombres"
            android:inputType="textPersonName"
            android:paddingLeft="11dp"
            android:textColorHint="#3C3B3B"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/txtCorreo"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_gravity="center"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="correo: example@gamil.com"
            android:inputType="textEmailAddress"
            android:paddingLeft="11dp"
            android:textColorHint="#3C3B3B"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/txtIngreseClave"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_gravity="center"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="Ingrese clave"
            android:inputType="textPassword"
            android:paddingLeft="8dp"
            android:textColorHint="#3C3B3B"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/txtConfirmeClave"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_gravity="center"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="confirme su clave"
            android:inputType="textPassword"
            android:paddingLeft="11dp"
            android:textColorHint="#3C3B3B"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/txtNumero"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_gravity="center"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="Némero de telefono o celular"
            android:inputType="phone"
            android:paddingLeft="11dp"
            android:textColorHint="#3C3B3B"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/txtDireccion"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:ems="10"
            android:hint="Dirección"
            android:inputType="textPersonName"
            android:paddingLeft="11dp"
            android:textColorHint="#3C3B3B"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btCrear"
            android:layout_width="339dp"
            android:layout_height="58dp"
            android:layout_gravity="center"
            android:background="@drawable/borde_botones1"
            android:onClick="registrarUsuario"
            android:text="crear cuenta"
            android:textSize="18sp"
            app:backgroundTint="@color/teal_700" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <Button
            android:id="@+id/btCancelar"
            android:layout_width="343dp"
            android:layout_height="58dp"
            android:layout_gravity="center"
            android:background="@drawable/borde_botones1"
            android:onClick="cerrarPantallaRegistro"
            android:text="cancelar"
            android:textSize="18sp"
            app:backgroundTint="@android:color/holo_red_light" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>